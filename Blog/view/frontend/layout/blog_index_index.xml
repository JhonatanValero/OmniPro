        <link src="OmniPro_Blog::js/script.js"/>
        -->
        <css src="OmniPro_Blog::css/styles.css" />
    </head>
    <body>
        <referenceContainer name="content">
            <block name="OmniPro_Blog_Encabezado" template="OmniPro_Blog::encabezado.phtml">
                <arguments>
                    <argument name="view_model" xsi:type="object"> 
                        OmniPro\Blog\ViewModel\BlogViewModel
                    </argument>
                </arguments>
            </block>
            <block name="OmniPro_Blog_FormPost" template="OmniPro_Blog::formpost.phtml">
                <arguments>
                    <argument name="view_model" xsi:type="object"> 
                        OmniPro\Blog\ViewModel\BlogViewModel
                    </argument>
                </arguments>
            </block>
            <block name="OmniPro_Blog_Post" template="OmniPro_Blog::post.phtml">
                <arguments>
                    <argument name="view_model" xsi:type="object"> 
                        OmniPro\Blog\ViewModel\BlogViewModel
                    </argument>
                </arguments>
            </block>
            <block name="OmniPro_Blog_Complement" template="OmniPro_Blog::itemsko.phtml"></block>
        </referenceContainer>
